<mvc:View controllerName="com.mindset.juliette.v4skilltracker.controller.Worklist" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns:semantic="sap.f.semantic" xmlns:core="sap.ui.core" xmlns:fb="sap.ui.comp.filterbar">
    
<semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false">
        <semantic:titleHeading>
            <Title text="{i18n>worklistTitle}" level="H2" />
        </semantic:titleHeading>

        <semantic:headerContent>
            <!-- FIXME: onSearch ("Go" button in Toolbar) -->
            <fb:FilterBar 
                id="filterbar" 
                search="onSearch" 
                useToolbar="true">
                <fb:filterGroupItems>
                    <fb:FilterGroupItem groupName="searchName" groupTitle="Group1" name="Name" label="Name" labelTooltip="Search by name" visibleInFilterBar="true">
                        <fb:control>
                            <Input type="Text" value="{worklistView>/FirstName}" />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem groupName="searchRole" groupTitle="Group1" name="Role" label="Role" labelTooltip="Search by role" visibleInFilterBar="true">
                        <fb:control>
                            <Input type="Text" value="{worklistView>/Role}" />
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </semantic:headerContent>


        <semantic:content>
            <l:VerticalLayout class="sapUiContentPadding">
                <Table
                    id="employeeTable"
                    width="auto"
                    items="{
                    path: '/Employees',
                    sorter: {
                        path: 'Emp_Id',
                        descending: false
                    }
                }"
                    noDataText="{worklistView>/tableNoDataText}"
                    busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                    growing="true"
                    growingScrollToLoad="true"
                    updateFinished=".onUpdateFinished"
                    alternateRowColors="true"
                >
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title id="tableHeader" text="{worklistView>/worklistTableTitle}" level="H3" />
                            <ToolbarSpacer />
                            <Button text="Add Employee" press=".onAddEmployee" />
                        </OverflowToolbar>
                    </headerToolbar>

        

                    <columns>
                        <Column id="nameColumn">
                            <Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle" />
                        </Column>
                        <Column id="roleColumn">
                            <Text text="{i18n>tableRoleColumnTitle}" id="roleColumnTitle" />
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem type="Navigation" press=".onPress">
                            <cells>
                                <ObjectIdentifier title="{FirstName} {LastName}" />
                            </cells>
                            <cells>
                                <ObjectIdentifier title="{Role}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </l:VerticalLayout>
        </semantic:content>


        <!-- <mvc:dependents>
            <core:Fragment id="dialogFragment" fragmentName="com.mindset.juliette.v4skilltracker.fragment.EmployeeForm" type="XML" />
        </mvc:dependents> -->
    </semantic:SemanticPage>
</mvc:View>
